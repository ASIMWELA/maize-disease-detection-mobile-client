<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fg_community_issue_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp">

        <ImageView
            android:id="@+id/fg_community_issue_img"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="-6dp"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-6dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fg_communuty_issue_creator_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="@color/top_color"
            app:civ_border_color="@color/colorOnSecondary"
            app:civ_border_width="1.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_img"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/fg_community_issue_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/cousine"
            android:text="Augustine Simwela"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/fg_communuty_issue_creator_avatar"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_img" />

        <TextView
            android:id="@+id/fg_community_issue_creation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/fg_communuty_issue_creator_avatar"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_creator" />

        <TextView
            android:id="@+id/fg_community_tv_issue_question"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/alike_angular"
            android:text="Hello why can cause this kind of abc nand also hilep in hsgs"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_communuty_issue_creator_avatar" />

        <TextView
            android:id="@+id/fg_community_tv_issues_question_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/alike_angular"
            android:text="WImter hdfjfd fdkjfdhfd fkjdfdfk fdkjfdkfd fkjfkdf fkjfjkdf foif fdkjdf"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_tv_issue_question" />

        <TextView
            android:id="@+id/fg_community_issue_answers_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="4 answers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_tv_issues_question_desc" />

        <ImageView
            android:id="@+id/fg_community_btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_answers_number"
            app:srcCompat="@drawable/ic_baseline_thumb_up_alt_24" />

        <TextView
            android:id="@+id/fg_community_tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="like"
            app:layout_constraintStart_toEndOf="@+id/fg_community_btn_like"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_answers_number" />

        <ImageView
            android:id="@+id/fg_community_issue_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:layout_constraintStart_toEndOf="@+id/fg_community_tv_likes"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_answers_number"
            app:srcCompat="@drawable/ic_baseline_thumb_down_alt_24" />

        <TextView
            android:id="@+id/fg_community_tv_issue_dislikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="dislike"
            app:layout_constraintStart_toEndOf="@+id/fg_community_issue_dislike"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_answers_number" />

        <TextView
            android:id="@+id/tv_community_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:drawableStart="@drawable/ic_baseline_noise_control_off_24"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold|italic"
            app:drawableTint="@color/teal_700"
            app:layout_constraintStart_toEndOf="@+id/fg_community_issue_creation_date"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_creator" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_mark_as_resolved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as resolved"
            android:textColor="@color/white"
            android:visibility="gone"
            app:chipBackgroundColor="@color/top_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_img" />

        <ProgressBar
            android:id="@+id/pb_resolve_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_img" />

        <TextView
            android:id="@+id/tv_resolved_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/teal_700"
            android:padding="1dp"
            android:text="Resolved"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fg_community_issue_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>